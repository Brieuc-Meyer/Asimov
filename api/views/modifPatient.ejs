<%- include('header') %>
    <title>Pharmacie - PATIENT - <%=patient[0].patient_numsecu%></title>
    <div class="mainContainerBlue">
        <h1> MODIFIER LE PATIENT N° <%=patient[0].patient_numsecu%></h1>
    </div>

    <div class="itemModifContainer">
        <div class="align">
            <button class="btnBack" onClick="history.back()"><i class="fa-solid fa-rotate-left"></i></button>

            <form action="/patients/modifier" id="form" method="POST" enctype="application/x-www-formurlencoded">
                <button class="btnEdit"><i class="fa-regular fa-pen-to-square"></i></button>

                <input hidden type="number" name="numsecu" id="numsecu" value="<%=patient[0].patient_numsecu%>" required>

                <label for="nom">Nom&nbsp: </label>
                <input type="text" name="nom" id="nom" value="<%=patient[0].patient_nom%>" required>

                <label for="prenom">Prenom&nbsp: </label>
                <input type="text" name="prenom" id="prenom" value="<%=patient[0].patient_prenom%>" required>

                <label for="datenaiss">Date de naissance&nbsp: </label>
                <!--value par défaut au format YYYY-MM-DD un min / max peut etre définit en javascript-->
                <input type="date" name="datenaiss" id="dateLimiteMax"
                    value="<%=patient[0].patient_anneenaiss%>-<%=patient[0].patient_moisnaiss%>-<%=patient[0].patient_journaiss%>"
                    required>

                <label for="mutuelle">Mutuelle&nbsp: </label>
                <select name="mutuelle" id="mutuelle">
                    <option value="null">Pas de mutuelle</option>

                    <% mutuelles.forEach(function(user){ if(user.mutuelle_id==patient[0].patient_mutuelle_id) { %>
                        <option value="<%= user.mutuelle_id %>" selected> <%= user.mutuelle_nom %> </option>
                        <% } else {%>
                            <option value="<%= user.mutuelle_id %>"> <%= user.mutuelle_nom %> </option>
                    <% }})%>

                </select>



            </form>
        </div>
    </div>
    <script src="/scripts/controleSaisie.js"></script>
<%- include('footerModif') %>
